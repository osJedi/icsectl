import getopt
import os
import os.path
import serial
import sys

def checkdev(dev):	
	if dev == None:
		print("Device must be specified.")
		print()
		usage()
		sys.exit(2)
def main():
	# Define command line options.
	try:
		opts, args = getopt.getopt(sys.argv[1:], "cd:f:ho:")
	except getopt.GetoptError as err:
		print(str(err))
		usage()
		sys.exit(2)
	
	dev = None
	bits = 0

	# Handle command line.
	for o, a in opts:
		if o == "-c":
			checkdev(dev)
			bits = 0
		elif o == "-d":
			writestatus(dev, bits)
			dev = a
			bits = readstatus(dev)
		elif o == "-f":
			checkdev(dev)
			bits &= -int(pow(2.0, int(a))) - 1
		elif o == "-h":
			usage()
			exit(0)
		elif o == "-o":
			checkdev(dev)
			bits |= int(pow(2.0, int(a)))
	writestatus(dev, bits)
	
def getfilename(dev):
	path = os.path.expanduser("~/.icsctl")
	if False == os.path.exists(path):
		os.mkdir(path)
	filename = path + "/icsctl" + dev.replace("/", "-")
	return filename	

def readstatus(dev):
	try:
		file = open(getfilename(dev), "r")
	except FileNotFoundError as err:
		return 0
	a = file.readline()
	if (a == "IcsCtl\n"):
		a = file.readline()
		try:
			bits = int(a)
		except ValueError:
			bits = 0
	else:
		bits = 0
	file.close()
	return bits

def usage():
	"""
	Outputs the online help.
	"""
	print("Usage: icsctl [Options]")
	print("control ICStation USB multi channel relay module")
	print()
	print("  -c         clear, switch off all outlets")
	print("  -d DEVICE  device id, e.g. /dev/ttyICSE012A")
	print("  -f OUTLET  switch outlet off")
	print("  -h         display this help")
	print("  -o OUTLET  switch outlet on")
	print()
	print("The device must be specified before the actions.")
	print("If multiple devices are specified, the actions relate")
	print("to the last device specified.")

def writestatus(dev, bits):
	if dev == None:
		return
	# Open serial connection.
	try:
		ser = serial.Serial(
			port = dev, \
			baudrate =  9600, \
			stopbits = serial.STOPBITS_ONE, \
			bytesize = serial.EIGHTBITS, \
			timeout = .1)
		ser.write(bytearray([bits]))
		ser.close()
	except serial.serialutil.SerialException as err:
		print(err)
		sys.exit(1)
	
	print(dev)
	for i in range(0, 8):
		if 0 != int(pow(2.0, i)) & bits:
			bit = 1
		else:
			bit = 0
		print("    outlet {}: {}".format(i, bit))
	print()

	file = open(getfilename(dev), "w")
	file.write("IcsCtl" + "\n")
	file.write(str(bits) + "\n")
	file.close()

if __name__ == "__main__":
	main()
